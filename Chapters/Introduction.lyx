\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\begin{aligned}E_{j} & =\left(m_{j}^{2}c^{4}+p_{j}^{2}c^{2}\right)^{\frac{1}{2}}=p_{j}c\left(1+\frac{m_{j}^{2}c^{2}}{p_{j}^{2}}\right)^{\frac{1}{2}}\\
