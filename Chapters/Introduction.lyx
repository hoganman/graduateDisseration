\end_layout

\begin_layout Standard
The probability of a muon type neutrinos surviving is given by 
\begin_inset Formula 
\begin{equation}
\begin{aligned}\mathcal{P}\left(\nuantinuparticle{\mu}\rightarrow\nuantinuparticle{\mu}\right)=1-4 & \sss{23}\ccc{13}\left(V_{\cos\delta_{\text{CP}}}\right)\sin^{2}\phi_{31}\\
-4 & \sss{23}\ccc{13}\left(Z_{\cos\delta_{\text{CP}}}\right)\sin^{2}\phi_{32}\\
-4 & \left(V_{\cos\delta_{\text{CP}}}\right)\left(Z_{\cos\delta_{\text{CP}}}\right)\sin^{2}\phi_{21}
\end{aligned}
\label{eq:numu2numuthreeflavorfull}
\end{equation}

\end_inset

where
\begin_inset Formula 
\begin{equation}
V_{\cos\delta_{\text{CP}}}=\sss{12}\ccc{23}+\sss{13}\sss{23}\ccc{12}+2\ss{12}\ss{13}\ss{23}\cc{12}\cc{23}\cos\delta_{\text{CP}}\label{eq:Vcosdelta}
